<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kcastilloe.thebeerapp_def">

    <!-- Permisos de uso necesarios para el usuario. -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Conexión a Internet. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Estado de la conexión a redes móviles y Wi-Fi.-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ca_icono_color"
        android:label="Cheer App!"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TheBeerApp">
        <activity
            android:name=".SplashScreenActivity"
            android:label="Cheer App!"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".DetalleCervezaActivity" />
        <activity android:name=".NuevaCervezaActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/TheBeerApp.NoActionBar" />
    </application>

</manifest>